<div class="viens-copine d-flex" style="align-items: center; justify-content: center;">
  <div class="form-container">
    <div class="form-title">
      <h2>Créer un compte</h2>
    </div>
   <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <%= f.error_notification %>
   <div class="form-row">
     <div class="col">
       <%= f.input :first_name, label: 'Prénom', required: true %>
     </div>
     <div class="col">
       <%= f.input :last_name, label: 'Nom', required: true %>
     </div>
   </div>
   <div class="form-row">
     <div class="col">
       <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }%>
     </div>
     <div class="col">
       <%= f.input :phone_number, label: 'Numéro de téléphone',required: true %>
     </div>
   </div>

     <%= f.input :address, label:'Adresse', required: true %>
     <%= f.input :category, label: 'Catégorie', collection: User.categories, required: true %>
     <div class="form-row">
       <div class="col">
         <%= f.input :password,label: 'Mot de passe', required: true,
         hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
         input_html: { autocomplete: "new-password" } %>
       </div>
       <div class="col">
         <%= f.input :password_confirmation, label: 'Confirmation', required: true, input_html: { autocomplete: "new-password" } %>
       </div>
     </div>

     <div class="form-row">
       <div class="col">
         <%= f.input :photo_cache, as: :hidden %>
         <%= f.input :photo, :label => "Choisir une photo de profil", label_html: { class: 'upload-button' } %>
       </div>
     </div>



   <div class="form-actions">
     <%= f.button :submit, "Créer un compte", input_html: { class: 'signup-button' } %>
   </div>
   <% end %>
   <div class="form-shared-links">
    <%= render "devise/shared/links" %>
   </div>
 </div>


</div>

