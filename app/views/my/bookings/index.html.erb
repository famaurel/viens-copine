
<% unless @pending_bookings == nil %>

<div class="container custom-card">
  <% @trips.each do |trip| %>
    <a href="<%= my_trips_path %>" class>
      <div class="latte">
        <img src=<%= trip.bookings[0].user.photo %> class="avatar"/>
        <div class="latte-content">
          <p><%= trip.bookings[0].user.first_name %></p>
          <span class="small"> Départ : <%= Time.at(trip.start_time).strftime("%Hh%M") %></span>
        </div>
        <div>
           <%= link_to my_trip_path(trip), method: :delete, data: { confirm: "Supprimez ce trajet" } do %>
<i class="fas fa-times"></i>
<% end %>


        </div>

        <div class="latte-info">
          <div class="stars">
            <% trip.bookings[0].user.average_rating.times do  %>
              <i class="fas fa-star"></i>
            <% end %>
          </div>
            <% category = trip.bookings[0].user.category %>
            <% if category == 'fêtarde' %>
              <i class="category fas fa-cocktail"></i>
            <% elsif category == 'calme' %>
              <i class="category fas fa-glass-whiskey"></i>
            <% else %>
              <i class="category fas fa-wine-glass-alt"></i>
            <% end %>
        </div>
      </div>
  <% end %>

    </div>
</div>





<ul>
  <% @pending_bookings.each do |pending_booking| %>
  <li><%= pending_booking.user.first_name %></li>
  <li data-pending_booking-statut-id="<%= pending_booking.id %>" ><%= pending_booking.state %></li>
  <% if pending_booking.state == "pending" %>
  <li data-pending_booking-button-id="<%= pending_booking.id %>"> <%= link_to "Approve", approve_my_booking_path(pending_booking), :method => :patch, remote: true, class: "btn btn-primary" %></li>
  <% end %>
  <% end %>
</ul>
<% end %>



<% unless @client_bookings == nil %>

<ul>
  <% @client_bookings.each do |client_booking| %>
  <li><%= client_booking.trip %></li>
  <li><%= client_booking.state %></li>
  <% end %>
</ul>

<% end %>
