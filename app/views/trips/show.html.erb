
<div class="container">
  <div class="row">
  <div class="col-sm-6">
  <div class="latte">
    <img src=<%= @trip.bookings[0].user.photo %> class="avatar"/>
      <div class="latte-info">
        <div class="stars">
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
        </div>
        <i class="category fas fa-cocktail"></i>
      </div>
      <%= link_to "Rejoindre un trajet", trip_bookings_path(@trip.id), method: :post, class: "btn btn-orange" %>
    </div>




      <% @bookings.each do |booking| %>
      <div class="latte">
        <img src='https://ca.slack-edge.com/T02NE0241-UF7QRS1M1-c46c82878af4-72' class="avatar"/>

            <ul>
              <li><%= booking.user.first_name %></li>
              <li> <%= booking.state %></li>
            </ul>

        </div>


      <% end %>


  </div>
  <div class="col-sm-6">
      <div
      id="map"
      style="width: 100%;
      height: 60vh;
       zoom: 2;
       center: [trip.start_long, trip.start_lat];"
      data-markers="<%= @marker.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>

  </div>
  <div
  id="map"
  style="width: 100%;
  height: 60vh;
   zoom: 2;
   center: [trip.start_address.longitude, trip.start_address.latitude];"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
</div>

</div>






